<div class="modal fade" id="createArrowModal" tabindex="-1" aria-labelledby="createArrowModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="createArrowModalLabel">Create arrow</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <%= form_with model: model do |f| %>
        <div class="modal-body">
          <div class="form-group">
            <%= f.label :to_user_id, 'For who?' , class: 'form-label' %>
            <%= f.collection_select :to_user_id, User.exclude_user(current_user), :id, :name,
                                  { :prompt => 'Please select an icalier'}, 
                                  class: 'form-control' %>
          </div>
          <div class="form-group mt-2">
            <%= f.label :content, 'Reason' , class: 'form-label' %>
            <%= f.text_area :content, class: 'form-control' %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <%= f.submit "Create" , class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
