<header class="icalier-info p-5 bg-white rounded">
  <div class="d-flex">
    <%= user_avatar current_user, class: 'big-avatar avatar-img rounded-circle' %>
    <div class="ms-4">
      <h2><%= current_user.name %></h2>
      <h3 class="text-warning"><%= current_user.points %> points</h3>
      <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createArrowModal">
        Create arrow
      </button>
    </div>
  </div>
</header>
<section class="arrows-grid">
  <%= render partial: "arrows/arrows/arrow", collection: @received_arrows %>
</section>
<!-- Modal -->
<div class="modal fade" id="createArrowModal" tabindex="-1" aria-labelledby="createArrowModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="createArrowModalLabel">Create arrow</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <%= form_with model: current_user.sent_arrows.build do |f| %>
        <div class="modal-body">
          <div class="form-group">
            <%= f.label :to_user_id, 'For who?' , class: 'form-label' %>
            <%= f.collection_select :to_user_id, User.exclude_user(current_user), :id, :name,
                                  { :prompt => 'Please select an icalier'}, 
                                  class: 'form-control' %>
          </div>
          <div class="form-group mt-2">
            <%= f.label :content, 'Reason' , class: 'form-label' %>
            <%= f.text_area :content, class: 'form-control' %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <%= f.submit "Create" , class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
