<header class="icalier-info p-5 bg-white rounded">
  <div class="d-flex">
    <%= user_avatar current_user, class: 'big-avatar avatar-img rounded-circle' %>
    <div class="ms-4">
      <h2><%= current_user.name %></h2>
      <h3 class="text-warning"><%= current_user.points %> points</h3>
      <p class="btn btn-primary">Create arrow</p>
      <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
        Launch demo modal
      </button>

    </div>
  </div>
</header>
<section class="arrows-grid">
  <% current_user.received_arrows.order(created_at: :desc).each do |arrow| %>
    <div class="bg-white rounded">
      <main class="p-3 d-flex justify-content-between">
        <p>
          <span class="text-info">DATE:</span>
          <%= l arrow.created_at, format: :short %>
        </p>
        <%= user_avatar arrow.from_user, class: 'small-avatar avatar-img rounded-circle' %>
      </main>
      <footer class="bg-warning">
      </footer>
    </div>
  <% end %>
</section>

<!-- Button trigger modal -->

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
